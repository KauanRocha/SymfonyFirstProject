{%extends 'base.html.twig' %}
{% block title %}{{title}}{% endblock %}
{%block body%}
<h1>{{title}}</h1>

<a href= "{{ path('adicionar_produto') }}" class="btn btn-primary">Adicionar</a>

<table class="table">
    <thead>
        <tr>
            <td>#</td>
            <td>Categoria</td>
            <td>Nome do Produto</td>            
            <td>Valor</td>
        </tr>
    <thead>
    <tbody>
    {% for produto in produtos %}

        <tr>
            <td>{{produto.id}}</td>
            <td>{{produto.categoria.descricaocategoria}}</td>
            <td>{{produto.nomeproduto}}</td>
            <td>{{produto.valor}}</td>
            <td>
                <a href='{{ path('editar_produto', {id: produto.id})}}' class="btn btn-primary">Editar</a>
                <a href='{{ path('excluir_produto', {id: produto.id})}}' class="btn btn-primary">Excluir</a>
            </td>
        </tr>

    {% endfor %}
    </tbody>
</table>

{% endblock %}